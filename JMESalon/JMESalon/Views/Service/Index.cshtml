@model IEnumerable<JMESalon.DAL.Service>

@{
    ViewBag.Title = "Services";
}

<div class="jumbotron j-services text-center">
    <div class="container-fluid">
        <img class="img-responsive home-logo" src="~/images/jme-salon-logo_2-01.png" />
        <!--<h1 class="main-head">JME Salon</h1>-->
        <p class="lead">We do all this, and we do it well.</p>
    </div>
</div>
<div class="container">
    <h2 class="page-header">Services</h2>
    <p>
        <a href='@Url.Action("Create", "Service")' class="btn btn-primary services">Create New</a>
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.associatedImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.serviceLink)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            //
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.associatedImg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.serviceLink)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

    <div class="row is-flex">
        @foreach (var item in Model)
        {
            @Html.Partial("_ServicesDisplayView", item)
        }
    </div>


    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
   
</div>
